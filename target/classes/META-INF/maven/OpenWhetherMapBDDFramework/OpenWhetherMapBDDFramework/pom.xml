                    <version>2.20.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.7.0</version>
                    <configuration>
                        <includes>
                        <exclude>**/TestRunner.java</exclude>
                        </includes>                  
                    </configuration>
               </plugin>
